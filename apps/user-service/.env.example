# Service Configuration
NODE_ENV=development
PORT=3003
LOG_LEVEL=debug

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_video_interview_user
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=user-service
KAFKA_CONSUMER_GROUP=user-service-group
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_AUTH_EVENTS=auth-events

# MinIO Configuration (Avatar Storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=user-avatars
MINIO_USE_SSL=false

# NOTE: If MinIO auth fails, check docker-compose.infrastructure.yml
# Make sure MINIO_ROOT_USER and MINIO_ROOT_PASSWORD match these values

# Service Limits
MAX_AVATAR_SIZE_MB=5
MAX_BIO_LENGTH=500

# API Gateway (Internal Communication)
API_GATEWAY_URL=http://localhost:3002
INTERNAL_SERVICE_TOKEN=internal-secret-token-change-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
