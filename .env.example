# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_main
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_test
# Per-service databases
USER_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_user

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO/S3 Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=ai-interview-media

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-interview-platform
KAFKA_GROUP_ID=ai-interview-group

# JWT Configuration (API Gateway verification)
# Access token verification via JWKS exposed by Keycloak
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
USER_JWT_ALG=RS256

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8090
KEYCLOAK_REALM=ai-video-interview
KEYCLOAK_CLIENT_ID=ai-video-interview-app
KEYCLOAK_CLIENT_SECRET=
# KEYCLOAK_CLIENT_SECRET остается пустым для public client

# Frontend settings
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_WEB_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Service Ports
API_GATEWAY_PORT=3002
USER_SERVICE_PORT=3003
INTERVIEW_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
WEB_PORT=3000

# External APIs (for later phases)
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
RESEND_API_KEY=your-resend-api-key

# Environment
NODE_ENV=development

