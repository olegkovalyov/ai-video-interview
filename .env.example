# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_main
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_test
# Per-service databases
USER_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_video_interview_user

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO/S3 Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=ai-interview-media

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-interview-platform
KAFKA_GROUP_ID=ai-interview-group

# JWT Configuration (API Gateway verification)
# Access token verification via JWKS exposed by user-service
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
USER_JWT_ALG=RS256
USER_JWKS_URL=http://localhost:${USER_SERVICE_PORT}/auth/.well-known/jwks.json
# For local dev of user-service signing keys (paths or inline for dev only)
# USER_JWT_PRIVATE_KEY_PATH=./keys/user-service-private.pem
# USER_JWT_PUBLIC_KEY_PATH=./keys/user-service-public.pem

# Service Ports
API_GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
INTERVIEW_SERVICE_PORT=8002
MEDIA_SERVICE_PORT=8003
WEB_PORT=3000

# External APIs (for later phases)
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
RESEND_API_KEY=your-resend-api-key

# Environment
NODE_ENV=development
