{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "NODE_ENV", "LOG_LEVEL", "INTERVIEW_SERVICE_PORT"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "NODE_ENV", "LOG_LEVEL", "INTERVIEW_SERVICE_PORT", "DATABASE_URL", "KAFKA_BROKERS", "REDIS_HOST"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.spec.ts", "test/**/*"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "test/**/*"]
    }
  }
}
